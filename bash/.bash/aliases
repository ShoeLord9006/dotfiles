#CURTIN LAB SSH
alias getmachine='curl -s http://rtserver.ashtech.one/lab'
alias sshc='ssh 20183606@$(getmachine)'

#REGULAR ALIASES
alias ls='ls --color=auto'
alias grep='grep --color=auto'

function vimopen {
    if [[ $1 == /* ]]
    then
        FILE=$1
    else
        FILE="$(pwd)/$1"
    fi
    echo $FILE
    echo -e ']51;["call","Tapi_OpenFile",["'$FILE'"]]\x7'
}
